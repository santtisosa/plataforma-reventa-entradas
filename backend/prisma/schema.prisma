generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Modelo de Usuario
model User {
  id            String   @id @default(uuid())
  email         String   @unique
  password      String
  name          String
  phone         String?
  verified      Boolean  @default(false)
  stripeCustomerId String? @unique

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relaciones
  ticketsSelling Ticket[]      @relation("SellerTickets")
  ticketsBuying  Transaction[] @relation("BuyerTransactions")

  @@map("users")
}

// Modelo de Entrada/Ticket
model Ticket {
  id            String   @id @default(uuid())
  eventName     String
  eventDate     DateTime
  eventVenue    String
  category      String
  section       String?
  row           String?
  seat          String?
  price         Float
  quantity      Int      @default(1)
  description   String?
  imageUrl      String?

  status        TicketStatus @default(AVAILABLE)

  sellerId      String
  seller        User     @relation("SellerTickets", fields: [sellerId], references: [id])

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relaciones
  transactions  Transaction[]

  @@map("tickets")
  @@index([status])
  @@index([sellerId])
  @@index([eventDate])
}

// Modelo de Transacci贸n (Escrow)
model Transaction {
  id                String   @id @default(uuid())

  ticketId          String
  ticket            Ticket   @relation(fields: [ticketId], references: [id])

  buyerId           String
  buyer             User     @relation("BuyerTransactions", fields: [buyerId], references: [id])

  amount            Float
  platformFee       Float
  sellerAmount      Float

  status            TransactionStatus @default(PENDING)

  // Stripe Payment Intent
  stripePaymentIntentId String? @unique
  stripeTransferId      String? @unique

  // Fechas importantes
  escrowReleaseDate DateTime?
  completedAt       DateTime?
  cancelledAt       DateTime?

  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@map("transactions")
  @@index([status])
  @@index([buyerId])
  @@index([ticketId])
}

// Enums
enum TicketStatus {
  AVAILABLE
  IN_ESCROW
  SOLD
  CANCELLED
  EXPIRED
}

enum TransactionStatus {
  PENDING           // Esperando pago del comprador
  PAYMENT_RECEIVED  // Pago recibido, en escrow
  IN_ESCROW         // Fondos en escrow, esperando confirmaci贸n
  COMPLETED         // Transacci贸n completada, fondos liberados al vendedor
  CANCELLED         // Transacci贸n cancelada
  REFUNDED          // Reembolsado al comprador
  DISPUTED          // En disputa
}
